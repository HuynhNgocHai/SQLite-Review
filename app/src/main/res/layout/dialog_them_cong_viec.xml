<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72c797">

    <TextView
        android:id="@+id/tvThem"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Thêm công việc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edTenCV"
        android:hint="Nhập tên công việc"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnThem"
        android:text="Thêm"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/edTenCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnHuy"
        android:text="Hủy"
        android:layout_toRightOf="@id/btnThem"
        android:layout_below="@id/edTenCV"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>